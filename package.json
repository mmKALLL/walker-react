{
  "name": "walker-react",
  "version": "1.0.0",
  "private": true,
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "globals": {
      "walker": true
    },
    "rules": {
      "semi": "off",
      "padded-blocks": "off"
    }
  },
  "scripts": {
    "watch": "rm -rf build && yarn sass & yarn tsx",
    "sass": "sass --watch walker.sass walker.css",
    "tsx": "babel --watch src src/*/* --out-dir build/ --presets react-app/prod"
  },
  "dependencies": {
    "babel-cli": "6",
    "babel-preset-react-app": "3"
  }
}
