{
  "name": "walker-react",
  "version": "1.0.0",
  "private": true,
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "globals": {
      "walker": true
    },
    "rules": {
      "semi": "off",
      "padded-blocks": "off"
    }
  },
  "scripts": {
    "watch": "yarn sass & yarn tsx",
    "sass": "sass --watch styles:build/styles",
    "tsx": "babel --watch src --out-file build/walker.js --presets react-app/prod --source-maps"
  },
  "dependencies": {
    "babel-cli": "6",
    "babel-preset-react-app": "3"
  }
}
